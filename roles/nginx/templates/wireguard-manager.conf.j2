# Configuration Nginx pour protéger le WebUI WireGuard avec Basic Auth
# Reverse proxy vers le service Flask (port 5000)
# Ce vhost est configuré comme default_server pour capturer toutes les requêtes sur le port 80
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    # Protection Basic Auth globale pour toutes les requêtes
    auth_basic "Accès restreint - Gestionnaire WireGuard";
    auth_basic_user_file /etc/nginx/.wg_auth;

    # Proxy vers le service Flask WebUI
    location / {
        proxy_pass http://127.0.0.1:{{ webui_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Remote-User $remote_user;

        # Timeouts pour les requêtes longues (ex: téléchargement de fichiers)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Sécurité : désactiver l'affichage de la version
    server_tokens off;

    # Logs
    access_log /var/log/nginx/wireguard-manager-access.log;
    error_log /var/log/nginx/wireguard-manager-error.log;
}
