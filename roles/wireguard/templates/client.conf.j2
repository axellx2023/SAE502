# Configuration WireGuard Client
# Généré automatiquement par Ansible pour {{ client_name }}

[Interface]
# Clé privée du client
PrivateKey = {{ client_private_key }}
# Adresse IP du client sur le réseau VPN
Address = {{ client_ip }}/24
# DNS (optionnel, peut être configuré)
# DNS = 8.8.8.8

[Peer]
# Clé publique du serveur WireGuard
PublicKey = {{ server_public_key }}
# Endpoint : IP publique du serveur + port WireGuard
Endpoint = {{ server_public_ip }}:{{ wireguard_port }}
# Routes autorisées (tout le trafic passe par le VPN)
# Pour un accès partiel uniquement au réseau VPN, utilisez : AllowedIPs = {{ wireguard_network }}
AllowedIPs = 0.0.0.0/0
# Keepalive : maintient la connexion active (important pour NAT/4G)
PersistentKeepalive = 25
