{
  "id": null,
  "title": "WireGuard VPN Dashboard",
  "tags": ["wireguard", "vpn"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "WireGuard Exporter Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"wireguard\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto"
      }
    },
    {
      "id": 2,
      "title": "Nombre de Peers WireGuard",
      "type": "stat",
      "targets": [
        {
          "expr": "count(wireguard_peer_last_handshake_seconds)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "justifyMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "Trafic Reçu (RX) par Peer",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(wireguard_peer_received_bytes_total[5m])",
          "legendFormat": "{{ "{{" }}public_key{{ "}}" }}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          },
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "title": "Trafic Transmis (TX) par Peer",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(wireguard_peer_transmitted_bytes_total[5m])",
          "legendFormat": "{{ "{{" }}public_key{{ "}}" }}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          },
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 5,
      "title": "Dernière Poignée de Main (Last Handshake)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "time() - wireguard_peer_last_handshake_seconds",
          "legendFormat": "{{ "{{" }}public_key{{ "}}" }}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          },
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 6,
      "title": "Liste des Peers",
      "type": "table",
      "targets": [
        {
          "expr": "wireguard_peer_last_handshake_seconds",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true
            },
            "indexByName": {},
            "renameByName": {
              "Value": "Dernière Handshake (s)",
              "public_key": "Clé Publique"
            }
          }
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "editable": true,
  "gnetId": null
}
