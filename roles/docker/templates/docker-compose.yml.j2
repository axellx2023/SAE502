version: '3.8'

services:
  # Service WebUI (Flask) - Liste des configs + QR codes
  # Accessible depuis l'extérieur sur le port 5000 pour télécharger les configs
  webapp:
    build:
      context: {{ docker_stack_path }}/webapp
      dockerfile: Dockerfile
    container_name: webapp-internal
    ports:
      - "{{ webui_port }}:5000"
    volumes:
      - {{ wireguard_clients_path }}:{{ wireguard_clients_path }}:ro
    environment:
      - FLASK_ENV=production
      - SECRET_KEY={{ webui_secret_key }}
      - CLIENTS_PATH={{ wireguard_clients_path }}
      - QR_PATH={{ wireguard_qr_path }}
    networks:
      - {{ docker_network_name }}
    restart: unless-stopped

  # Nginx - Reverse proxy pour service interne (accessible uniquement via VPN)
  nginx:
    image: nginx:alpine
    container_name: {{ nginx_container_name }}
    ports:
      - "{{ nginx_port }}:80"
    volumes:
      - {{ nginx_web_root }}:/usr/share/nginx/html:ro
      - {{ docker_stack_path }}/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    networks:
      - {{ docker_network_name }}
    restart: unless-stopped
    depends_on:
      - webapp

  # WireGuard Exporter - Métriques WireGuard pour Prometheus
  wireguard-exporter:
    image: mindflavor/prometheus-wireguard-exporter:latest
    container_name: {{ wireguard_exporter_container_name }}
    ports:
      - "127.0.0.1:{{ wireguard_exporter_port }}:9586"
    volumes:
      - {{ wireguard_config_path }}/{{ wireguard_interface }}.conf:/etc/wireguard/wg0.conf:ro
    command:
      - '-wg.config-file=/etc/wireguard/wg0.conf'
    networks:
      - {{ docker_network_name }}
    restart: unless-stopped
    cap_add:
      - NET_ADMIN

  # Prometheus - Supervision
  prometheus:
    image: prom/prometheus:latest
    container_name: {{ prometheus_container_name }}
    ports:
      - "127.0.0.1:{{ prometheus_port }}:9090"
    volumes:
      - {{ docker_stack_path }}/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
    networks:
      - {{ docker_network_name }}
    restart: unless-stopped
    depends_on:
      - wireguard-exporter

  # Grafana - Visualisation (accessible depuis localhost + VPN via UFW)
  grafana:
    image: grafana/grafana:latest
    container_name: {{ grafana_container_name }}
    ports:
      - "{{ grafana_port }}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - {{ docker_stack_path }}/grafana/provisioning/datasources:/etc/grafana/provisioning/datasources:ro
      - {{ docker_stack_path }}/grafana/provisioning/dashboards:/etc/grafana/provisioning/dashboards:ro
      - {{ docker_stack_path }}/grafana/dashboards:/var/lib/grafana/dashboards:ro
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_INSTALL_PLUGINS=
      - GF_SERVER_ROOT_URL=http://localhost:3000
      - GF_PATHS_PROVISIONING=/etc/grafana/provisioning
    networks:
      - {{ docker_network_name }}
    restart: unless-stopped
    depends_on:
      - prometheus

volumes:
  prometheus_data:
  grafana_data:

networks:
  {{ docker_network_name }}:
    external: false
